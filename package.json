{
  "name": "happy-talk",
  "version": "0.0.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:server": "node dist/server/server.js",
    "build": "ng build",
    "build:server": "tsc -p server/tsconfig.json",
    "build:all": "npm run build && npm run build:server",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --watch",
    "test:ci": "node scripts/test-ci.js",
    "dev": "npm run build:all && npm run start:server"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.8.2",
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@angular/service-worker": "^21.1.0",
    "@azure/cosmos": "^4.2.0",
    "@azure/storage-blob": "^12.30.0",
    "@fastify/cors": "^10.0.2",
    "@fastify/multipart": "^9.4.0",
    "@fastify/static": "^8.0.4",
    "dotenv": "^17.2.3",
    "fastify": "^5.2.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.2",
    "@angular/cli": "^21.1.2",
    "@angular/compiler-cli": "^21.1.0",
    "@types/node": "^22.13.1",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
